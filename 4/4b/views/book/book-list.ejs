      <% if (books.length > 0) { %>
      <div class="container">
         <div class="row">
            <% for (let book of books) { %>
               <div class="row ">
                  <div class="card mr-5 mt-5" style="width: 18rem;">
                     <img class="card-img-top" src="car.image" alt="Card image cap">
                     <div class="card-body">
                     <h5 class="card-title"><%=book.book_name %></h5>
                     <h5 class="card-title">stock : <%=book.book_stock %></h5>
                     <% if(book.book_stock === 0) {%> 
                        <a href="#" class="btn btn-primary disabled" role="button" aria-disabled="true">Pinjam</a>
                     <%} else{%>
                        <a href="#" class="btn btn-primary " role="button" aria-disabled="true">Pinjam</a>
                     <%}%>
                     <a href="#" class="btn btn-primary ">Kembalikan</a>
                     </div>
                  </div>
               </div>
            <% } %>
         </div>
      </div>
      <% }%>
      </div>

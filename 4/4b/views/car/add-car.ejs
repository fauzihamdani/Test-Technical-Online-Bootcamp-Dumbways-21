      <div class="col-md-12 text-center pt-5"><h1>ADD Car</h1></div>
      <div class="container ">
         <form enctype="multipart/form-data" method="POST" action="/add-car">
            <div class="form-group mb-3">
               <label for="exampleInputcar-name">Car Name</label>
               <input
                  type="text"
                  class="form-control"
                  name="carName"
                  id="exampleInputcar-name1"
                  aria-describedby="car-nameHelp"
                  placeholder="Enter Car Name"
               />
            </div>

            <div class="form-group">
               <select class="custom-select" name="brand">
                  <option selected>Brand</option>
                  <% if (brands.length > 0) { %> 
                     <% for (let brand of brands) { %>
                     <option value="<%= brand.id%>">
                     <%= brand.brand_name %>
                  </option>
                  <% } %> <% } %>
               </select>
            </div>            

            <div class="form-group mb-3">
               <label for="exampleFormControlFile1">Car Image</label>
               <input
                  type="file"
                  name="image"
                  class="form-control-file"
                  id="exampleFormControlFile1"
               />
            </div>

            <div class="form-group mb-3">
               <label for="exampleInputEmaidl1">Color</label>
               <textarea
                  class="form-control"
                  id="exampleFormControlTextarea1"
                  rows="3"
                  name="color"
               ></textarea>
            </div>

            <div class="form-group mb-3">
               <label for="exampleInputEmail1">Description</label>
               <textarea
                  class="form-control"
                  id="exampleFormControlTextarea1"
                  rows="3"
                  name="description"
               ></textarea>
            </div>


            <label for="exampleInputcar-name">Stock</label>
            <input
               type="number"
               class="form-control"
               name="stock"
               id="exampleInputcar-name1"
               aria-describedby="car-nameHelp"
               placeholder="Enter Stock"
            />
         </div>
         <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      </div>

